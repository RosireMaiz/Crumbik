div.stars {
  
  display: inline-block;
}

input.star { display: none; }

label.star {
  float: right;
  padding: 0px;
  font-size: 12px;
  color: #444;
  color: transparent;
  transition: all .2s;
}

input.star:checked ~ label.star:before {
  content: '\f005';
  color: #FD4;
  background-color: transparent;
  border: none;
  transition: all .25s;
}

input.star-5:checked ~ label.star:before {
  color: #FE7;
  background-color: transparent;
  border: none;
  
  text-shadow: 0 0 20px #952;
}

input.star-1:checked ~ label.star:before { 
  color: #F62; 
  background-color: transparent;
  border: none;}

label.star:hover { 
  background-color: transparent;
  border: none;
  transform: rotate(-15deg) scale(1.3); }

label.star:before {
  background-color: transparent;
  border: none;
  content: '\f006';
  font-family: FontAwesome;
}

label.star-1:after, label.star-2:after, label.star-3:after, label.star-4:after, label.star-5:after {
  background-color: transparent;
  border: none;
}

