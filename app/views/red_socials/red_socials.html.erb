<% content_for :css_personalizado do %>
 <%= stylesheet_link_tag    "jquery.dataTables" %> 
<% end %>

<div class="row titulo-seccion">
  <div class="banner banner-perfil">
    <div class="contenedor">
      <div class="col s6">
        <h5 class="text-uppercase ">
         Redes Sociales
        </h5>
      </div>
      <div class="col s6 text-right ">
        <ol class="breadcrumb">
          <li>
            <a href="/">Inicio</a>
          </li>
          <li class="active">Redes Sociales</li>
        </ol>
      </div>
    </div>
  </div>
</div>


<div class="row pad30-h">
  <table id="red_socials" class="display" cellspacing="0" width="100%" >
    <thead>
      <tr >
          <th>Nombre</th>
          <th class="text-center">Icono</th>
          <th class="text-center">Estatus</th>
          <th>
            Acciones

            <a href="/redes_sociales/agregar"  class="white-text red lighten-1 btn-sm btn-table-action tooltipped waves-effect" data-position="bottom" data-tooltip="Agregar Red Social" data-delay="20"><i class="fa fa-plus"></i></a>
          </th>
      </tr>
    </thead>
    <tbody>
      <% @red_socials.each do |red_social| %>

         <% if ! red_social.nil? %>
            <tr>
                <td data-search="<%= red_social.nombre %>"> 
                    <%= red_social.nombre %> 
                </td>  
                <td class="text-center"> 
                    <i class="<%= red_social.icono %> fa-2x"></i>
                </td>                  
                <td class="text-center"> 
                  <% if (red_social.estatus == 'A') %>
                      Activo 
                  <% else %>
                      Deshabilitado
                  <% end %>
                </td> 
                <td > 
                
                  <% if !(red_social.estatus == 'A') %>
                    <a  href="#modal<%= red_social.id %>" class="modal-trigger btn-success btn-sm"> Habilitar</a>
                  <% else %>
                     <a  href="#modal<%= red_social.id %>" class=" modal-trigger btn-warning btn-sm" >Deshabilitar</a>
                  <% end %>
                     <a href="#modaleditar<%= red_social.id %>" class="modal-trigger btn-primary btn-sm" onclick="validar(modaleditar<%= red_social.id %>, <%= red_social.id %>)"> Editar</a>
                </td>  
                    
            </tr>
          <% end %>
        <% end %>
            
     </tbody>
  </table>

  <% @red_socials.each do |red_socials| %>
    <% if ! red_socials.nil? %>
        <!-- Modal Structure -->
        <div id="modal<%= red_socials.id %>" class="modal">
          <div class="modal-content">
                <a style="float:right;" class="waves-effect btn-flat modal-close"><i class="mdi-content-clear"></i></a>
               <% if (red_socials.estatus == 'A') %>
                  <h5>Deshabilitar Red Social</h5>
                <% else %>
                  <h5>Habilitar Red Social</h5>
                <% end %>     

                <div class="row" style="padding-top: 35px;">
                    <div class="col s12 text-center">
                      <% if (red_socials.estatus == 'A') %>
                        <h6 style=" font-size: 20px;"> ¿Seguro que desea Deshabilitar la red social seleccionada? </h6>
                      <% else %>
                        <h6 style=" font-size: 20px;"> ¿Seguro que desea Habilitar la red social seleccionada? </h6>
                      <% end %>
                      <div  class="right pad30-t">
                      <% if (red_socials.estatus == 'A') %>
                         <input type="button" class="btn btn-success btn-sm" value="Aceptar" onclick="update_estatus(<%= red_socials.id %>,'I')">
                      <% else %>
                        <input type="button" class="btn btn-success btn-sm" value="Aceptar" onclick="update_estatus(<%= red_socials.id %>,'A')">
                      <% end %>
                       
                        <input type="button" class="btn btn-danger btn-sm modal-close" value="Cancelar" >
                      </div>

                    </div>
                </div>   

          </div>
        </div> 


        <div id="modaleditar<%= red_socials.id %>" class="modal modal-45" form="true" >
          <div class="modal-content " >
                <a style="float:right;" class="waves-effect btn-flat modal-close" onclick="cancelar(modaleditar<%= red_socials.id %>, <%= red_socials.id %>, nombre<%= red_socials.id %>, icono<%= red_socials.id %>, '#div_icono<%= red_socials.id %> > button > i')"><i class="mdi-content-clear"></i></a>
                <h5>Editar Red Social</h5>
                
                <div class="row" style="padding-top: 35px;">
                    <div class="col s12 ">
                      

                      <div class="row">
                        <div class=" input-field col s8 offset-s2 ">
                          <input id="nombre<%= red_socials.id %>" name="red_social[nombre]" type="text" value="<%= red_socials.nombre %>"> 
                          <label for="nombre<%= red_socials.id %>">Nombre:</label>

                        </div>
                      </div>
                      <input type="hidden" id="icono<%= red_socials.id %>" name="red_social[icono]">

                       <div class="row" >
              
                          <div class=" offset-s2 col s2">
                              <p style="color: #9E9E9E"><b>Icono:</b></p>
                          </div>

                          <div class="col s3" id="div_icono<%= red_socials.id %>" >
                              <button class="btn grey" data-iconset="fontawesome" 
                                   data-placement="right"
                                  data-unselected-class="btn-info" data-arrow-class="pink lighten-1"
                                  data-arrow-prev-icon-class="glyphicon glyphicon-chevron-left" onchange="cambio('#iconoPicker<%= red_socials.id %> > i', icono<%= red_socials.id %>, '#icono<%= red_socials.id %>-error')"
                                  data-arrow-next-icon-class="glyphicon glyphicon-chevron-right" id="iconoPicker<%= red_socials.id %>"  role="iconpicker">
                              </button>
                          </div>
                      </div>
                      
                      <div class=" text-center pad30-t">
                        <button class="btn btn-success btn-sm" onclick="update(modaleditar<%= red_socials.id %>, <%= red_socials.id %>, nombre<%= red_socials.id %>, icono<%= red_socials.id %>,'#div_icono<%= red_socials.id %>' )">Guardar</button>

                        <button  class="btn btn-danger btn-sm modal-close" value="Cancelar"  onclick="cancelar(modaleditar<%= red_socials.id %>, <%= red_socials.id %>, nombre<%= red_socials.id %>, icono<%= red_socials.id %>, '#div_icono<%= red_socials.id %> > button > i')">Cancelar</button>
                      </div>
                    </div>
                </div>
            </div>                
        </div>
        <script type="text/javascript">
          var iconpicker = '#iconoPicker' + <%= red_socials.id %>;
          var iconoval = "<%= red_socials.icono.to_s -%>";
          var res = iconoval.substring(3);
          var redsocial = '#modaleditar' + <%= red_socials.id %>;
          $(iconpicker).iconpicker({
               rows:3,
               searchText: 'Buscar...',
               cols:5,
               icon: res,
             });
          function cambio(icono, input_icono){
            $(input_icono).val(iconoval);
           };

        </script>

    <% end %>
  <% end %>

</div>

