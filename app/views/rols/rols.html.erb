<% content_for :css_personalizado do %>
 <%= stylesheet_link_tag    "jquery.dataTables" %> 
<% end %>

<div class="row titulo-seccion">
  <div class="banner banner-perfil">
    <div class="contenedor">
      <div class="col s6">
        <h5 class="text-uppercase ">
         Roles
        </h5>
      </div>
      <div class="col s6 text-right ">
        <ol class="breadcrumb">
          <li>
            <a href="/">Inicio</a>
          </li>
          <li class="active">Roles</li>
        </ol>
      </div>
    </div>
  </div>
</div>


<div class="row pad30-h">
  <table id="rols" class="display" cellspacing="0" width="100%" >
    <thead>
      <tr>
          <th>Nombre</th>
          <th>Estatus</th>
          <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @rols.each do |rol| %>

         <% if ! rol.nil? %>
            <tr>
                <td data-search="<%= rol.nombre %>"> 
                    <%= rol.nombre %> 
                </td>                  
                <td> 
                <% if (rol.estatus == 'A') %>
                    Activo 
                <% else %>
                    Deshabilitado
                <% end %>
                </td> 
                <td> 
                <% if !(rol.estatus == 'A') %>
                  <a  href="#modal<%= rol.id %>" class="modal-trigger btn-primary btn-sm"> Habilitar</a>
                <% else %>
                   <a  href="#modal<%= rol.id %>" class=" modal-trigger btn-warning btn-sm" >Deshabilitar</a>
                <% end %>
                  <a  href="#modaleditar<%= rol.id %>" class="modal-trigger btn-primary btn-sm"> Editar</a>
                </td>  
                    
            </tr>
          <% end %>
        <% end %>
            
     </tbody>
  </table>

  <% @rols.each do |rols| %>
    <% if ! rols.nil? %>
        <!-- Modal Structure -->
        <div id="modal<%= rols.id %>" class="modal">
          <div class="modal-content">
                <a href="#" style="float:right;" class="waves-effect btn-flat modal-close"><i class="mdi-content-clear"></i></a>
                <h5>Deshabilitar Rol</h5>
                
                <div class="row" style="padding-top: 35px;">
                    <div class="col s12 text-center">
                      <% if (rols.estatus == 'A') %>
                        <h6 style=" font-size: 20px;"> ¿Seguro que desea deshabilitar el rol seleccionado? </h6>
                      <% else %>
                        <h6 style=" font-size: 20px;"> ¿Seguro que desea Habilitar el rol seleccionado? </h6>
                      <% end %>
                      <div style="padding-top: 35px;" class="right">
                      <% if (rols.estatus == 'A') %>
                         <input type="button" class="btn btn-success btn-sm" value="Aceptar" onclick="update_estatus(<%= rols.id %>,'I')">
                      <% else %>
                        <input type="button" class="btn btn-success btn-sm" value="Aceptar" onclick="update_estatus(<%= rols.id %>,'A')">
                      <% end %>
                       
                        <input type="button" class="btn btn-danger btn-sm" value="Cancelar" onclick="cerrarModal(modal<%= rols.id %>)">
                      </div>

                    </div>
                </div>                
          </div>
        </div> 


        <div id="modaleditar<%= rols.id %>" class="modal modal-45">
          <div class="modal-content">
                <a href="#" style="float:right;" class="waves-effect btn-flat modal-close"><i class="mdi-content-clear"></i></a>
                <h5>Editar Rol</h5>
                
                <div class="row" style="padding-top: 35px;">
                    <div class="col s12 text-center">
                      <div class="row">
                        <div class=" input-field col s8 offset-s2 ">
                          <input id="nombre<%= rols.id %>" type="text" class="validate" value="<%= rols.nombre %>"> 
                          <label for="nombre<%= rols.id %>">Nombre:</label>

                        </div>
                      </div>
                      
                        <input type="button" class="btn btn-success btn-sm" value="Guardar" onclick="update(<%= rols.id %>, nombre<%= rols.id %> )">
                      
                        <input type="button" class="btn btn-danger btn-sm" value="Cancelar" onclick="cerrarModal(modaleditar<%= rols.id %>)">
                      </div>

                    </div>
                </div>                
          </div>
        </div> 


    <% end %>
  <% end %>

</div>

