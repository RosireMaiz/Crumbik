<div class="row titulo-seccion banner banner-perfil">
  <div class="contenedor">
    <div class="col s6">
      <h5 class="text-capitalize">
       Crear Nuevo Criterio de Difusión
      </h5>
    </div>
    <div class="col s6 text-right ">
      <ol class="breadcrumb">
        <li>
          <a href="/">Inicio</a>
        </li>
        <li class="active">Crear Criterio de Difusión</li>
      </ol>
    </div>
  </div>
</div>

<div id="form">
  <%= form_for @criterio_difusion, :url => criterio_difusions_crear_criterio_difusion_path, html:{id: "add_criterio_difusion", class: "form-horizontal"} do |f| %>
    <div >
      <div class="form-body steps">
        <div>
          <div class="feedback alert alert-danger display-none">
            <button class="close" data-dismiss="alert"></button>
            Algunos campos tienen errores. Por favor revisa abajo.
          </div>
          <div class="feedback alert-success display-none">
            <button class="close" data-dismiss="alert"></button>
            La validación fue exitosa.
          </div>

          <div class="row">
            <div class="col s8 offset-s2 left">
              <h5 >Datos del Criterio de Difusión </h5>
  
              <div class="input-field col s10">
                <label for="criterio_difusion_nombre">Nombre: <span class="required">
                * </span>
                </label>
                <%= f.text_field :nombre, :required=>true, autocomplete: "off", length:"50" %>
              </div>
               <div class="input-field col s10">
                <label for="criterio_difusion_decripcion">Descripción: <span class="required">
                * </span>
                </label>
                <%= f.text_area :descripcion, :required=>true, autocomplete: "off", class:"materialize-textarea",length:"220" %>
              </div>
              <div class="input-field col s10">
                <label for="criterio_difusion_tabla">Tabla Referencia: <span class="required">
                * </span>
                </label>
                <%= f.text_field :tabla, :required=>true, autocomplete: "off", length:"20" %>
              </div>
              <div class="input-field col s10">
                <label for="criterio_difusion_campo_comparacion">Campo a comparar: <span class="required">
                * </span>
                </label>
                <%= f.text_field :campo_comparacion, :required=>true, autocomplete: "off", length:"50" %>
              </div>
              
            </div>
          </div>
        </div>
      </div>
     
        <div class="row">
          <div class="col s11 text-center">
            
            <input type="submit" class="btn btn-success " value="Guardar">
             <button type="button" onclick="window.location.href='/criterios_difusion'" class="btn btn-danger waves-effect">Cancelar</button>
          </div>
       
      </div>
    </div>
  <% end %>
</div>

<% content_for :javascript_personalizado do %>
  <%= javascript_include_tag 'maestros/criterio_difusions' %>
<script type="text/javascript">
  $(document).ready(function(){
      $('.alert-danger').hide();
      $('.alert-success').hide();
  });
</script>

<% end %>