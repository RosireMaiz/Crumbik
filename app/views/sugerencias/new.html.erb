<div class="row titulo-seccion">
  <div class="banner banner-perfil">
    <div class="contenedor">
      <div class="col s6">
        <h5 class="text-uppercase">
         Enviar Sugerencia
        </h5>
      </div>
      <div class="col s6 text-right ">
        <ol class="breadcrumb">
          <li>
            <a href="/">Inicio</a>
          </li>
          <li class="active">Enviar Sugerencia</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div id="form_wizard_1" class="center-block">
   <%= form_for @sugerencia,  :url => sugerencias_crear_sugerencia_path, html:{id: "add_sugerencia", class: "form-horizontal"} do |f| %>
    <div class="form-wizard">
      <div class="form-body steps">
        <div class="tab-content">
          <div class="feedback alert alert-danger display-none">
            <button class="close" data-dismiss="alert"></button>
            Algunos campos tienen errores. Por favor revisa abajo.
          </div>
          <div class="feedback alert-success display-none">
            <button class="close" data-dismiss="alert"></button>
            La validaci√≥n fue exitosa.
          </div>
          <div>
            <div class="row">

              <div class="col s8 offset-s2 left">
                <h5>Sugerencia </h5>
    
                <div class="input-field col s12">
                  <label for="sugerencia_titulo">Titulo <span class="required">
                  * </span>
                  </label>
                  <%= f.text_field :titulo, :required=>true, autocomplete: "off" %>
                </div>

                <div class="input-field col s12">
                  <label for="sugerencia_contenido">Contenido <span class="required">
                  * </span>
                  </label>
                  <%= f.text_area :contenido, :required=>true, autocomplete: "off", class: "materialize-textarea", length: "200" %>

                </div>

              </div>
            </div>
          </div>

          <div class="form-actions">
            <div class="row">
              <div class="col s12 text-center">
                
                <input type="submit" class="btn btn-success " value="Guardar">
                <button type="button" onclick="window.location.href='/sugerencias'" class="btn btn-danger waves-effect">Cancelar</button>
              </div>
            </div>
          </div>

        </div>
      </div>

    </div>
  <% end %>
</div>

<% content_for :javascript_personalizado do %>
  <script type="text/javascript">
    $(document).ready(function(){
        $('.alert-danger').hide();
        $('.alert-success').hide();
    });
  </script>
<% end %>