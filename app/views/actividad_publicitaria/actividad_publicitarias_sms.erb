<% content_for :css_personalizado do %>
    <style type="text/css">
      .dropdown-content {
        max-height: 250px;  
      }
    </style>
<% end %>
<div class="row titulo-seccion">
  <div class="banner banner-perfil">
    <div class="contenedor">
      <div class="col s6">
        <h5 class="text-uppercase">
         Campañas Publicitarias Para SMS
        </h5>
      </div>
      <div class="col s6 text-right ">
        <ol class="breadcrumb">
          <li>
            <a href="/">Inicio</a>
          </li>
          <li class="active">Campañas Publicitarias</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<div class="row pad30-h">
  <div class="col s3">
      <ul class="collapsible filtro" data-collapsible="expandable">
        <li>
          <div class="collapsible-header active  grey lighten-4">
            <i class="fa fa-calendar fa-2x deep-purple-text text-darken-1"></i>
            <span class="deep-purple-text text-darken-1">Fecha</span>
          </div>
          <div class="collapsible-body white">
            <div style = " display: table; width : 100%;">

              <div class="input-field col s6">
                <input id="Desde" type="date" class="datepicker">
                <label for="Desde" class = "morado">Inicio</label>

              </div>

              <div class="input-field col s6">
                <input id="Hasta" type="date" class="datepicker">
                <label for="Hasta" class = "morado">Fin</label>
              </div>

            </div>
            <a class="waves-effect waves-light btn z-depth-1 espacio pink accent-3" style = " margin-left: 27px;">Buscar </a>
          </div>
        </li>
      </ul>
  </div>

  <div class="col s9">
    <div class="row no-margin-v">
      <div class="input-field col m6 s12">
       <select id="select" name="rol" >
            <option value="-1" selected>Elija un Producto</option>
            <%= options_from_collection_for_select(Producto.all, :id, :nombre) %>
        </select>
        <label>Producto</label>
      </div>
    </div>

    <div class="row"> 
      <h6>Seleccione la Campaña Publicitaria que desea Promocionar</h6>
      <div class="col s12" align="justify">
        <% if !@actividad_publicitaria_detalle.blank? %>
          <ul class="collection" >
            <% @actividad_publicitaria_detalle.each do |actividad_publicitaria_detalle| %>
              <% if ! actividad_publicitaria_detalle.nil? %>
                <li class="collection-item">

                    <div class="">
                      <div class="row no-margin-v">

                        <div class="col s12 ">
                          <p class="no-padding">
                            <h5 class="pink-text text-darken-3 no-margin-v"><%= actividad_publicitaria_detalle.actividad_publicitarium.descripcion %></h5><br><%= actividad_publicitaria_detalle.actividad_publicitarium.descripcion %>
                          </p>
                          
                          <div class="col s6 no-padding">
                            <p class="no-padding">
                              <b class="grey-text text-darken-3">Fecha de inicio:</b>
                              <%= actividad_publicitaria_detalle.actividad_publicitarium.inicio.strftime("%d/%m/%Y ") %>
                            </p>
                          </div>
                          <div class="col s6 no-padding">
                            <p class="no-padding">
                              <b class="grey-text text-darken-3">Fecha de vencimiento:</b>
                              <%= actividad_publicitaria_detalle.actividad_publicitarium.fin.strftime("%d/%m/%Y ") %>
                            </p>
                          </div>
                          <p class="no-padding">
                            <b class="grey-text text-darken-3">Producto:</b>
                            <%= actividad_publicitaria_detalle.actividad_publicitarium.producto.nombre %>
                          </p>
                           <p class="no-padding">
                           <b class="grey-text text-darken-3">Actividades Publicitarias:</b>
                          
                                                      
                          </p>
                          
                          
                          <div class="secondary-content">
                              <span style="padding-bottom: 5px;"><a href="/campanas_publicitaria/sms_clientes/<%= actividad_publicitaria_detalle.id %>"  id="<%= ActividadPublicitariaDetalle.type_actividads["sms"] %> " class="red-social-add light-blue tooltipped" data-tooltip="SMS"><i class="fa fa-comments"></i></a></span>
                          </div>
                        </div>
                        
                      </div>

                    </div>

                </li>
              <% end %>
            <% end %>
          </ul> <!-- Fin collapse actividad_publicitaria_detalles -->

        <% end %>
      </div>
    </div>  
  </div>
</div>