
<div class="row titulo-seccion">
  <div class="banner banner-perfil">
    <div class="contenedor">
      <div class="col s6">
        <h5 class="text-capitalize">
         Llamadas
        </h5>
      </div>
      <div class="col s6 text-right ">
        <ol class="breadcrumb">
          <li>
            <a href="/">Inicio</a>
          </li>
          <li class="active">Llamadas</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="row pad30-h">


  <div class="col s12">
    <div class="row"> 
     
      <div class="col s12" align="justify">
        <% if !@actividad_publicitaria_detalle.blank? %>
          <ul class="collection" >
          
              <li class="collection-item">

                    <div class="row no-margin-v">

                      <div class="col s12 ">
                        <p class="no-padding">
                          <h5 class="pink-text text-darken-3 no-margin-v"><%= @actividad_publicitaria_detalle.actividad_publicitarium.descripcion %></h5><br><%= @actividad_publicitaria_detalle.actividad_publicitarium.descripcion %>
                        </p>
                        
                        <p class="no-padding">
                          <b class="grey-text text-darken-3">Producto:</b>
                          <%= @actividad_publicitaria_detalle.actividad_publicitarium.producto.nombre %>
                        </p>
                         <p class="no-padding">
                         <b class="grey-text text-darken-3">Asunto Llamada:</b>   
                          <%= @actividad_publicitaria_detalle.contenido %>
                        </p>
                      </div>
                      
                    </div>

              </li>
          </ul> <!-- Fin collapse actividad_publicitaria_detalles -->

        <% end %>
      </div>
    </div>  

    <div class="row">
    <h6>Seleccione El Cliente que Desea Llamar</h6>
      <div class="col s12">
        <ul class="collection z-depth-1">

          <% if !@clientes.blank? %>
            <% @clientes.each do |cliente| %>
                <li class="collection-item avatar">
                  
                  <% if cliente.usuario.nil? %>
                    <img src="/assets/avatar/sinfoto.jpg" alt="" class="circle right-align  ">
                  <% else %>
                     <img src="<%= cliente.usuario.perfi.formato_foto %><%= cliente.usuario.perfi.foto %>" alt="" class="circle valign-wrapper">
                  <% end -%>
                
                  <span class="title"><strong><%= cliente.nombres %> <%= cliente.apellidos %></strong></span>
                  <p>
                      <%= cliente.email %><br>
                      Tipo de Cliente:
                      <% if cliente.tipo_cliente.nil? %>
                        No Asignado
                      <% else %>
                        <%= cliente.tipo_cliente.nombre %>
                      <% end -%>
                  </p>
                      <div class="secondary-content">

                        <a href="/llamada" data-position="bottom" data-delay="50" data-tooltip="Llamar" class=" tooltipped">
                         <i class="small mdi-notification-phone-in-talk "></i>
                        </a>
                      </div>

                </li>

            <% end %>
          <% end %>
        </ul>
      </div>
      
    </div>
  </div>
</div>