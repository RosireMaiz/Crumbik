<% if ! @organizacion.iframe.nil? and @organizacion.iframe != "" %>
  
  <div class="row col s12 pad60-h">
    <!-- **** -->
    <!-- CARD -->
    <!-- **** -->
    <div class="col s7">
      <div class = "mapa no-margin no-margin-v">
        <iframe src = "<%= @organizacion.iframe %>" width="100%" height="400px" frameborder="0" allowfullscreen> </iframe>
        <div class="org-direccion-logo">
            <i class="fa fa-map-marker fa-2x"></i>
        </div>
        <div class="org-direccion">
          <p><b>DIRECCION:</b></p>
          <p><%= @organizacion.direccion %></p>
        </div>
      </div>
    </div>

    <!-- ********** -->
    <!-- FORMULARIO -->
    <!-- ********** -->
    
    <form  class="col s5">
      <div class="row">
        <div class="input-field">
          <input id="nombre" type="text" class="validate">
          <label for="nombre">Nombre</label>
       </div>
      </div>

      <div class="row">
        <div class="input-field">
          <input id="email" type="email" class="validate">
          <label for="email">e-Mail</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field">
          <input id="asunto" type="text" class="validate">
          <label for="asunto">Asunto</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field">
          <textarea id="mensaje" type="text" class="validate materialize-textarea" length="120"></textarea>
          <label for="mensaje">Mensaje</label>
        </div>
      </div>

      <div class="text-center row">
        <button class="btn waves-effect pink accent-4 lighten-2" type="submit" name="action">ENVIAR 
          <i class="fa fa-paper-plane"></i>
        </button>
      </div>
    </form>
  </div>
</div>

<%else%>

<div class="row col s12">
  <form class="col s8 offset-s2">
      <div class="row">
        <div class="input-field">
          <input id="nombre" type="text" class="validate">
