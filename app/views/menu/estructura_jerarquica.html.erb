  <script type="text/javascript" src="bootstrap-iconpicker/js/iconset/iconset-fontawesome-4.2.0.min.js"></script> 
  <!-- Bootstrap-Iconpicker -->
  <script type="text/javascript" src="bootstrap-iconpicker/js/bootstrap-iconpicker.js"></script>

  <script type="text/javascript" src= "http://lvh.me:3000/js/estructura_jerarquica.js"></script>



<div class="row titulo-seccion">
  <div class="banner banner-perfil">
    <div class="contenedor">
      <div class="col s6">
        <h5 class="text-uppercase ">
         Estructura Jerarquica
        </h5>
      </div>
      <div class="col s6 text-right ">
        <ol class="breadcrumb">
          <li>
            <a href="/">Inicio</a>
          </li>
          <li class="active">Estructura Jerarquica</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="row" >
  <div class="col s12">
    <div class="row">
      <div class="input-field col s4">
       
        <select id="select" name="rol" >
            <option value="-1" disabled selected>Elija un rol</option>
            <%= options_from_collection_for_select(Rol.all, :id, :nombre) %>
        </select>
       
        <label>Roles</label>
      </div>
      <div class="col s4 offset-s1 transparent tree_estructura" id="tree">
      </div>
    </div>
  </div>

  <div id="ventanaEdicion" class="modal">
    <div id="add_nodo" form="true"  class="modal-content" >
      <input type="hidden" id="icono" name="icono">
      <a href="#" style="float:right;" class="waves-effect btn-flat modal-close">
        <i class="mdi-content-clear"></i>
      </a>
      <h5 id="titulo">Agregar Nodo</h5>
  
      <div class="row " style="padding-top: 35px;">
        <div class="col s12">

          <div class="row"> 
              <div class="input-field col s12">
                    <input id="nombre" name="nombre" type="text" autocomplete="off">
                    <label for="nombre">Nombre:</label>
              </div>
          </div> 

          <div class="row" >
              
            <div class=" col s2">
                <p style="color: #9E9E9E"><b>Icono:</b></p>
            </div>

            <div class="col s3" id="div_icono" >
                <button class="btn grey" data-iconset="fontawesome" 
                    data-icon="fa-wifi" data-placement="right"
                    data-unselected-class="btn-info" data-arrow-class="pink lighten-1"
                    data-arrow-prev-icon-class="glyphicon glyphicon-chevron-left"
                    data-arrow-next-icon-class="glyphicon glyphicon-chevron-right" id="iconoPicker"  role="iconpicker">
                </button>
            </div>

          </div>

          <div class="row"> 
            <div class="input-field col s12">
                <input id="url" name="url" type="text" autocomplete="off">
                <label for="url">Url:</label>
            </div>
          </div> 

          <div class=" text-center">

            <button  id="btnGuardar" class= "btn btnForm waves-effect pink accent-4 lighten-2 btn-sm"> 
              Guardar
            </button>

            <button id="btnCancelar" class= "btn btnForm waves-effect accent-4 lighten-2 btn-sm modal-close">
              Cancelar
            </button>

          </div>

        </div>
      </div>  
    </div>
  </div>


  <div id="ventanaEliminar" class="modal modal-45">
    <div class="modal-content">
       <a href="#" style="float:right;" class="waves-effect btn-flat modal-close"><i class="mdi-content-clear"></i></a>
       <h5>Eliminar Nodo</h5>
                
        <div class="row" style="padding-top: 35px;">
          <div class="col s12 text-center">
                      
             <h6 id="mensajeEliminar" style=" font-size: 17px;"> </h6>
                      
            <div style="padding-top: 35px;" class="right">
                      
              <input id="btnAceptar" type="button" class="btn btn-success btn-sm" value="Aceptar" >
              <input type="button" class="btn btn-danger btn-sm modal-close" value="Cancelar" >

            </div>

           </div>
        </div>                
    </div>
  </div> 

</div>

  <script type="text/javascript">
    $('#iconoPicker').iconpicker({
      rows:3,
     searchText: 'Buscar...',
     cols:5
   });
  $('.dropdown-toggle').dropdown();

      $('#iconoPicker').on('change', function() {
        var icono = $('#iconoPicker > i').attr('class');
        if (icono == "fa fa-") {
            
            $('#icono').val("");
            $('#icono-error').show();

        }else{

            $('#icono').val(icono);
            $('#icono-error').hide();

        };
         
      });
  </script>
